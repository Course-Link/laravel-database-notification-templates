{
  "name": "dawidholka/laravel-database-notification-templates",
  "description": "Render Laravel notifications based on a template stored in the database.",
  "homepage": "https://github.com/dawidholka/laravel-database-notification-templates",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "laravel/framework": "^9.0"
  },
  "require-dev": {
    "ext-pdo_sqlite": "*",
    "mockery/mockery": "^1.0|^1.3.1",
    "orchestra/testbench": "~3.8|^4.0|^5.0|^6.0|^7.0",
    "phpunit/phpunit": "^7.5|^8.0|^9.3"
  },
  "autoload": {
    "psr-4": {
      "DH\\NotificationTemplates\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DH\\NotificationTemplates\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "DH\\NotificationTemplates\\NotificationTemplatesServiceProvider"
      ]
    }
  }
}